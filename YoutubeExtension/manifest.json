{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "https://www.youtube.com/*",
    "http://0.0.0.0:8877/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make this page red"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["tf.min.js","jquery.min.js","face-api.min.js","testing.js"]
    }
  ],
  "web_accessible_resources": [
    "weights/*",
    "models/*"
  ],
  "manifest_version": 2
}
